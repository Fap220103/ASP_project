@model ShoppingOnline.Models.tb_Customers
@{
    ViewBag.Title = "MyAccount";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<head>
    <link href="~/Assets/Client/myAccount/main.css" rel="stylesheet">
</head>

<body>
    <div class="container myAccount">
        <div class="main-body">
            <div class="row-parent">
                <div class="row-child">
                    <div class="card-right">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="~/Assets/Client/img/User/@Model.Image" alt="Admin"
                                     class="rounded-circle p-1 bg-primary" width="90">
                                <div class="mt-3">
                                    <h4>@Model.Account</h4>
                                </div>
                            </div>
                            <hr class="my-4">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a href="@Url.Action("MyAccount","Client",new {userID = Model.CustomerID} )"><h6 class="mb-1">Hồ sơ</h6>   </a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a href="#"><h6 class="mb-1">Đơn mua</h6>   </a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a href="@Url.Action("ChangePass","Client",new {userID = Model.CustomerID} )"><h6 class="mb-1">Đổi mật khẩu</h6>   </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="infor">
                    <div class="card">
                        @using (Html.BeginForm("MyAccount", "Client", FormMethod.Post, new { userID = Model.CustomerID }))
                        {
                            <div class="card-extend">
                                <div class="card-top">
                                    <h3>Hồ sơ của tôi</h3>
                                    <p>Quản lý thông tin hồ sơ để bảo mật tài khoản</p>
                                    <hr>
                                </div>
                                <div class="card-body-2">
                                    <div class="card-body-left">
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Tên đăng nhập</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <h6 class="mb-0">@Model.Account</h6>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Full Name</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" value="@Model.Name" name="txtName">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Email</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" value="@Model.Email" name="txtEmail">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Phone</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" value="@Model.Phone" name="txtPhone">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Birthday</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" value="@Model.Birthday" name="txtBirthday">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Address</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" value="@Model.Address" name="txtAddress">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-3"></div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="submit" class="btn btn-primary px-4" value="Save Changes">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="vertical-line"></div>
                                    <div class="card-body-right">
                                        <div class="d-flex flex-column align-items-center text-center">
                                            <img src="~/Assets/Client/img/User/@Model.Image" alt="Customer"
                                                 class="rounded-circle p-1 bg-primary" width="80">
                                            <div class="mt-3">
                                                <button>Chọn ảnh</button>
                                                <p class="mb-0">Dung lượng tối đa 1 MB </p>
                                                <p class="mb-0">Định dạng:.JPEG, .PNG</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">

    </script>
</body>