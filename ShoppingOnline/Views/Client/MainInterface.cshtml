@model IEnumerable<ShoppingOnline.Models.tb_Product>
@{
    ViewBag.Title = "MainInterface";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="tab-class text-center">
            <div class="row g-4">
                <div class="col-lg-4 text-start">
                    <h1>Our Organic Products</h1>
                </div>
                <div class="col-lg-8 text-end">
                    <ul class="nav nav-pills d-inline-flex text-center mb-5">
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill active" data-bs-toggle="pill"
                               href="/Client/MainInterface">
                                <span class="text-dark" style="width: 130px;">All Products</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            @Html.Action("CategoryMenu","Client")
                        </li>
                       
                    </ul>
                </div>
            </div>

            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4">

                        <div class="col-lg-12">
                            <div class="row g-4">
                                @foreach (var item in Model)
                                {
                                    <div class="col-md-6 col-lg-4 col-xl-3">
                                        <div class="rounded position-relative fruite-item">
                                            <a href="@Url.Action("ProductDetail", "Client", new { productId = item.ProductID })" />

                                            <div class="fruite-img">
                                                <img src="/Assets/Image/@item.Image" class="img-fluid w-100 rounded-top"
                                                     alt="">
                                            </div>

                                            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute"
                                                 style="top: 10px; left: 10px;">Quần Áo</div>

                                            <div class="p-4 border border-secondary border-top-0 rounded-bottom">

                                                <p class="product-name">@item.Name</p>


                                                <div class="d-flex justify-content-between flex-lg-wrap">
                                                    <p class="price">@item.Price VND</p>

                                                    <div class="group_icon">
                                                        <a href="@Url.Action("AddCart","Cart",new {productID = item.ProductID, strURL = Request.Url.ToString()})"
                                                           class="circle-container">
                                                            <i class="fa fa-shopping-bag"></i>
                                                        </a>
                                                        <button class="circle-container no-border">
                                                            <i class="heart-icon fas fa-heart"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
