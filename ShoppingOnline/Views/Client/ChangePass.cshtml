@model ShoppingOnline.Models.tb_Customers
@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<body>
    <div class="container myAccount">
        <div class="main-body">
            <div class="row-parent">
                <div class="row-child">
                    <div class="card-right">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="~/Assets/Client/img/User/@Model.Image" alt="Admin"
                                     class="rounded-circle p-1 bg-primary" width="90">
                                <div class="mt-3">
                                    <h4>@Model.Account</h4>
                                </div>
                            </div>
                            <hr class="my-4">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a href="@Url.Action("MyAccount","Client",new {userID = Model.CustomerID} )"><h6 class="mb-1">Hồ sơ</h6>   </a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a href="#"><h6 class="mb-1">Đơn mua</h6>   </a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a href="#"><h6 class="mb-1">Đổi mật khẩu</h6>   </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="infor">
                    <div class="card">
                        @using (Html.BeginForm("ChangePass", "Client", FormMethod.Post, new { userID = Model.CustomerID }))
                        {
                            <div class="card-extend">
                                <div class="card-top">
                                    <h3>Thêm Mật Khẩu</h3>
                                    <p>Để bảo mật tài khoản, vui lòng không chia sẻ mật khẩu cho người khác</p>
                                    <hr>
                                </div>
                                <div class="card-body-pass">
                                    <div class="form-group">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Mật khẩu cũ</h6>
                                        </div>
                                        <div class="form-group-pass">
                                            <input type="password" name="OldPass" id="oldPass" class="form-input-pass" required>
                                            <i class="toggle-password fas fa-eye" onclick="togglePasswordVisibility('oldPass')"></i>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Mật khẩu mới</h6>
                                        </div>
                                        <div class="form-group-pass">
                                            <input type="password" name="OldPass" id="newPass" class="form-input-pass" required>
                                            <i class="toggle-password fas fa-eye" onclick="togglePasswordVisibility('newPass')"></i>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Xác nhận mật khẩu</h6>
                                        </div>
                                        <div class="form-group-pass">
                                            <input type="password" name="OldPass" id="confirmPass" class="form-input-pass" required>
                                            <i class="toggle-password fas fa-eye" onclick="togglePasswordVisibility('confirmPass')"></i>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-3"></div>
                                        <div class="col-sm-9 text-secondary">
                                            <input type="submit" class="btn btn-primary px-4" value="Lưu">
                                        </div>
                                    </div>
                                    @if (ViewBag.Error != null)
                                    {
                                        <div class="alert alert-danger">
                                            @ViewBag.Error
                                        </div>
                                    }
                                    @if (ViewBag.Success != null)
                                    {
                                        <div class="alert alert-success">
                                            @ViewBag.Success
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">
        //show/hidden password
        function togglePasswordVisibility(passwordId) {
            var passwordInput = document.getElementById(passwordId);
            var toggleIcon = document.querySelector(".form-group-pass #" + passwordId + " + .toggle-password");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleIcon.classList.remove("fa-eye");
                toggleIcon.classList.add("fa-eye-slash");
            } else {
                passwordInput.type = "password";
                toggleIcon.classList.remove("fa-eye-slash");
                toggleIcon.classList.add("fa-eye");
            }
        }
    </script>
    <script src="~/Assets/Client/js/ChangePass/ChangePass.js"></script>
</body>

